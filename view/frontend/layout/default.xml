		<referenceBlock name="top.links">
			<block class="Baniwal\Testimonials\Block\Top\Link" name="testimonials-link" ifconfig="testimonials/general/top_menu_link"/>
		</referenceBlock>
		<referenceBlock name="footer_links">
			<block class="Baniwal\Testimonials\Block\Top\Link" name="testimonials-link-footer" ifconfig="testimonials/general/footer_link"/>
		</referenceBlock>
	</body>
</page>
