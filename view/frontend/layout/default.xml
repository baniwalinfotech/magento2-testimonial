        <css src="Baniwal_Testimonials::css/testimonial.css"/>
    </head>
	<body>
		<referenceContainer name="sidebar.main">
            <block class="Baniwal\Testimonials\Block\Testimonialssidebar" name="testimonial_sidebar" as="testimonial_sidebar" template="Baniwal_Testimonials::testimonial_sidebar.phtml" ifconfig="testimonials/general/position"/>
